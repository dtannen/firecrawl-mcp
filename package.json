{
  "name": "firecrawl-local-mcp",
  "version": "1.0.0",
  "description": "Firecrawl Local MCP Server for web scraping and crawling with local Firecrawl instance",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "firecrawl-local-mcp": "build/index.js"
  },
  "preferGlobal": false,
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "firecrawl",
    "web-scraping",
    "crawling",
    "ai",
    "llm",
    "integration"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtannen/firecrawl-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/dtannen/firecrawl-mcp/issues"
  },
  "homepage": "https://github.com/dtannen/firecrawl-mcp#readme",
  "author": "nspady",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "node scripts/build.js",
    "setup": "node build/index.js setup",
    "dev": "node scripts/dev.js",
    "lint": "tsc --noEmit -p tsconfig.lint.json",
    "start:http": "node build/index.js --transport http --port 3000",
    "start:http:public": "node build/index.js --transport http --port 3000 --host 0.0.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "esbuild": "^0.25.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@types/node": "^20.10.4",
    "@vitest/coverage-v8": "^3.1.1",
    "openai": "^4.104.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  }
}
